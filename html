<body>

<div id="lirik-container">
    <div class="judul">ðŸŽ¤ Lirik Sinkronisasi: [00:00:00] - [00:00:26] ðŸŽ¤</div>
</div>

<script>
    // Data Lirik dan Sinkronisasi Tempo (dalam milidetik)
    // Menggunakan data delay dari kode Python sebelumnya
    const lirikData = [
        // Stanza 1 - Mulai ~[00:00:00]
        { text: "temanku semua pada jahat tante", delay: 3000 },
        { text: "aku lagi susah mereka gak ada", delay: 3000 },
        { text: "coba kalo lagi jaya", delay: 3500 },
        { text: "aku dipuja pujanya tante", delay: 4000 },
        
        // Stanza 2 - Mulai ~[00:00:17]
        { text: "sudah terbiasa terjadi tante", delay: 3000 },
        { text: "teman datang ketika lagi butuh saja", delay: 3000 },
        { text: "coba kalo lagi susah", delay: 3500 },
        { text: "mereka semua menghilang", delay: 5000 }
    ];

    let indexLirik = 0;
    const container = document.getElementById('lirik-container');
    
    // Inisialisasi: Tambahkan semua lirik ke DOM, tapi sembunyikan semua
    function inisialisasiLirik() {
        lirikData.forEach((item, index) => {
            const newBaris = document.createElement('div');
            newBaris.className = 'baris-lirik';
            newBaris.id = `lirik-${index}`;
            newBaris.textContent = item.text;
            container.appendChild(newBaris);
        });
    }

    // Fungsi untuk menampilkan satu baris lirik (Karaoke Effect)
    function tampilkanBaris() {
        // Hapus kelas 'active' dari lirik sebelumnya
        const prevIndex = indexLirik - 1;
        if (prevIndex >= 0) {
            document.getElementById(`lirik-${prevIndex}`).classList.remove('active');
        }

        if (indexLirik < lirikData.length) {
            // Aktifkan lirik saat ini
            const currentLirikElement = document.getElementById(`lirik-${indexLirik}`);
            currentLirikElement.classList.add('active');

            // Jadwalkan baris berikutnya
            const delay = lirikData[indexLirik].delay;
            indexLirik++;
            setTimeout(tampilkanBaris, delay);
        } else {
            // Lagu Selesai
            setTimeout(() => {
                const finalMsg = document.createElement('div');
                finalMsg.className = 'judul';
                finalMsg.style.color = '#76b900';
                finalMsg.textContent = "=== Lagu Selesai ===";
                container.appendChild(finalMsg);
            }, 2000);
        }
    }

    // Mulai inisialisasi dan jalankan lagu
    inisialisasiLirik();
    // Tunggu 2 detik sebelum mulai tampilkan lirik pertama
    setTimeout(tampilkanBaris, 2000); 
</script>

</body>
</html>
