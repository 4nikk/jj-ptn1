import time
import sys

# Fungsi untuk simulasi efek typing (karakter muncul satu per satu)
def tampilkan_typing(teks, delay_per_karakter=0.02):
    """Menampilkan teks karakter per karakter dengan delay."""
    for karakter in teks:
        sys.stdout.write(karakter)
        sys.stdout.flush()
        time.sleep(delay_per_karakter)
    print() # Pindah baris

# Lirik dan Sinkronisasi Tempo (berdasarkan video [00:00:00] - [00:00:26])
# Format: (Lirik, Jeda sebelum lirik berikutnya dalam detik)
lirik_karaoke = [
    # Lirik Stanza 1 - Dimulai sekitar [00:00:00]
    ("temanku semua pada jahat tante", 3.0),
    ("aku lagi susah mereka gak ada", 3.0),
    ("coba kalo lagi jaya", 3.5),
    ("aku dipuja pujanya tante", 5.0), # Jeda lebih panjang sebelum masuk chorus/stanza 2
    
    # Lirik Stanza 2 - Dimulai sekitar [00:00:17]
    ("sudah terbiasa terjadi tante", 3.0),
    ("teman datang ketika lagi butuh saja", 3.0),
    ("coba kalo lagi susah", 3.5),
    ("mereka semua menghilang", 5.0) # Lagu selesai di bagian ini (diulang atau ganti melodi)
]

def putar_lagu_karaoke(lirik_data):
    """Memainkan lirik dengan sinkronisasi waktu."""
    print("--- ğŸ¤ Mulai Lirik Sedih ğŸ¤ ---")
    
    # Penanda Waktu Awal (Estimasi: 00:00:00)
    print("Lirik Sinkronisasi: [00:00:00] - [00:00:17]")
    
    # Stanza 1
    for i in range(4):
        lirik, jeda = lirik_data[i]
        tampilkan_typing(lirik, delay_per_karakter=0.03)
        time.sleep(jeda)
        
    # Penanda Waktu Lanjut (Estimasi: 00:00:17)
    print("\nLirik Sinkronisasi: [00:00:17] - [00:00:26]")
    
    # Stanza 2
    for i in range(4, 8):
        lirik, jeda = lirik_data[i]
        tampilkan_typing(lirik, delay_per_karakter=0.03)
        time.sleep(jeda)
    
    print("--- ğŸ¶ Bagian Lirik Selesai ğŸ¶ ---")

# Eksekusi program kita!
putar_lagu_karaoke(lirik_karaoke)
